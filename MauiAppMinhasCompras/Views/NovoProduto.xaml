<?xml version="1.0" encoding="utf-8" ?>
<!-- Definição da página de conteúdo -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="Novo Produto"> <!-- Título da página -->

    <!-- Definição dos itens da barra de ferramentas -->
    <ContentPage.ToolbarItems>
        <!-- Item da barra de ferramentas com texto "Salvar" e evento de clique associado -->
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    
    <!-- Layout empilhado verticalmente com espaçamento e padding -->
    <VerticalStackLayout Spacing="10" Padding="10">
        <!-- Rótulo para a descrição do produto -->
        <Label Text="Descrição do Produto:" />
        <!-- Campo de entrada para a descrição do produto -->
        <Entry x:Name="txt_descricao" />

        <!-- Rótulo para a quantidade -->
        <Label Text="Quantidade:" />
        <!-- Campo de entrada para a quantidade com teclado numérico -->
        <Entry x:Name="txt_quantidade" Keyboard="Numeric" />

        <!-- Rótulo para o preço unitário -->
        <Label Text="Preço Unitário:" />
        <!-- Campo de entrada para o preço unitário com teclado numérico -->
        <Entry x:Name="txt_preco" Keyboard="Numeric" />
    </VerticalStackLayout>
</ContentPage>